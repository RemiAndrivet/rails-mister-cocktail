<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%= dose.ingredient.name %></p> - <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this dose ?' } %>
<% end %>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail)%> / <%= link_to "Go back to homepage", cocktails_path%>