<div class="container">
  <div class="header">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success"%>
  </div>
  <div class="banner-cocktail">

    <div class="picture">
      <%if @cocktail.photo.attached?%>
        <%= cl_image_tag @cocktail.photo.key %>
      <%else%>
      <img src="https://source.unsplash.com/cocktail" alt="Card image cap">
      <%end%>
    </div>

    <div class="ingredients">
      <ul><% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this dose ?' } %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <%= link_to "Go back to homepage", root_path, class: "go-back"%>
</div>
